<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/rl_data">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="5dp"
            android:background="@color/purple"
            android:textSize="12dp"
            android:id="@+id/tv_transaction_type" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_transaction_type"
            android:textSize="12dp"
            android:id="@+id/tv_lr_number" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_below="@id/tv_lr_number"
            android:id="@+id/rl_vehicle">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_rect_white_smoke">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple"
                    android:text="Truck No."
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/tv_text_vehicle_no"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/tv_icon_text_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_text_vehicle_no"
                    android:textSize="@dimen/tv_icon_text_small"
                    android:textAlignment="center"
                    android:id="@+id/tv_vehicle_number" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_purple"
        android:elevation="2dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/rl_no_data">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_plus_white"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_red_light"
        android:elevation="2dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/rl_no_data_expired">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_plus_white"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</RelativeLayout>